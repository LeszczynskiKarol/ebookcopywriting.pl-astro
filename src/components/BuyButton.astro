---
interface Props { text?: string; size?: 'md' | 'lg'; class?: string; showArrow?: boolean; }
const { text = 'KupujÄ™ ebook', size = 'md', class: className = '', showArrow = true } = Astro.props;
---
<button
  class:list={[
    'buy-button inline-flex items-center justify-center gap-2',
    'bg-primary-500 hover:bg-primary-600 text-white font-bold rounded-xl',
    'transition-all duration-300 hover:scale-[1.02]',
    'shadow-lg shadow-primary-500/25',
    'focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2',
    'disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100',
    size === 'lg' ? 'text-lg py-5 px-10' : 'py-4 px-8',
    className,
  ]}
  data-product-id="ebook-copywriting-360"
>
  <span>{text}</span>
  {showArrow && (
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  )}
</button>
